{
  "manifest_version": 3,
  "name": "proyt",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "neonred.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
