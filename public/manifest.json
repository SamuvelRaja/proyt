{
  "manifest_version": 3,
  "name": "proyt",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/"],
      "js": ["home.js", "sidebar.js"],
      "css": ["yt.css"]
    },
    {
      "matches": ["https://www.youtube.com/results*"],
      "js": ["search.js", "sidebar.js"],
      "css": ["yt.css"]
    },
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["watch.js"],
      "css": ["yt.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
